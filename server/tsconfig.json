{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/config*": ["./src/config*"],
      "@/constants*": ["./src/constants*"],
      "@/controllers*": ["./src/controllers*"],
      "@/middlewares*": ["./src/middlewares*"],
      "@/models*": ["./src/models*"],
      "@/routes*": ["./src/routes*"],
      "@/schemas*": ["./src/schemas*"],
      "@/services*": ["./src/services*"],
      "@/utils*": ["./src/utils*"]
    }
  },
  "include": ["src/**/*.ts", "src/server.js"],
  "exclude": ["node_modules"]
}
